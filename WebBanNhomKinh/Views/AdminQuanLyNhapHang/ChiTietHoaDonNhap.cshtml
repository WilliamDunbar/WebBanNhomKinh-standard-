    function check() {
        var ok;
        $("table#tb_themsp > tbody > tr").each(function () {
            var idsp = $('#sp', this).val();
            var sl = $('#txtsl', this).val();
            var dvt = $('#txtdvt', this).val();
            var gianhap = $('#txtgianhap', this).val();
            if (idsp != "" && sl != "" && sl > 0 && dvt != "" && gianhap != "" && gianhap > 0) {
                ok = true;

            }
            else {
                ok = false;

            }
        });
        return ok;
    };

    var count = 0;
    $(window).load(function () {
        $('#checlAll').change(function () {
            $("input:checkbox").prop('checked', $(this).prop("checked"));
            if (this.checked) {
                $("#bt_xoa_all").show();
                $("#Dialog_them").hide();
                $("#bt_huy_all").show();
            }
            else {

                $("#bt_xoa_all").hide();
                $("#Dialog_them").show();
                $("#bt_huy_all").hide();
            }
        });

        $("input[type='checkbox']").change(function (e) {
            if ($(this).is(":checked")) {
                count++;

            } else {
                count--;

            }
            if (count > 0) {
                $("#bt_xoa_all").show();
                $("#bt_huy_all").show();
                $("#Dialog_them").hide();
            } else {
                $("#bt_xoa_all").hide();
                $("#bt_huy_all").hide();
                $("#Dialog_them").show();
            }
        });
        $("#bt_huy_all").click(function () {
            $("#bt_xoa_all").hide();
            $("#bt_huy_all").hide();
            $("#Dialog_them").show();
            $("input:checkbox").attr('checked', false);
        });
        $("#bt_xoa_all").click(function () {
            
        });
    });
</Script>

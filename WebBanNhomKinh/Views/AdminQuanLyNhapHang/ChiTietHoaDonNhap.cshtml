                                                    </td>
                                                    <td>
                                                        @Html.TextBoxFor(m => m.ChiTietHoaDonNhap.GiaNhap, new {id = "txtgianhap", @class = "form-control validate[required]", placeholder = "Giá nhập", type = "number", Name = "gianhap"})
                                                    </td>
                                                    <td>

                                                    </td>
